<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_image"
            style="@style/ShapeableImageView.Round"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:src="@drawable/delete_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/pb_loading_image"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:indeterminateOnly="true"
            app:layout_constraintBottom_toBottomOf="@id/iv_image"
            app:layout_constraintEnd_toEndOf="@id/iv_image"
            app:layout_constraintStart_toStartOf="@id/iv_image"
            app:layout_constraintTop_toTopOf="@id/iv_image" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_to_favorites"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="6dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_baseline_favorite_border_24"
            app:iconGravity="textEnd"
            app:iconSize="20dp"
            app:layout_constraintStart_toStartOf="@id/iv_image"
            app:layout_constraintTop_toTopOf="@id/iv_image" />

        <TextView
            android:id="@+id/tv_headline"
            style="@style/TextView_H2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Fjallraven - Foldsack No. 1 Backpack, Fits 15 Laptops"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Your perfect pack for everyday use and walks in the forest. Stash your laptop (up to 15 inches)  Stash your laptop (up to 15 inches)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_headline"
            app:layout_constraintTop_toBottomOf="@id/tv_headline" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_cart"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/ic_round_add_24"
            app:iconGravity="end"
            app:layout_constraintBottom_toBottomOf="@id/iv_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/TextView_H1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="$1566.99"
            app:layout_constraintBaseline_toBaselineOf="@id/btn_add_to_cart"
            app:layout_constraintEnd_toStartOf="@id/btn_add_to_cart"
            app:layout_constraintStart_toStartOf="@id/tv_headline" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
